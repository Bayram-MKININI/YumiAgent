<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_agent.feature_auth.presentation.views.AuthView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hello_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_regular"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        tools:text="Bonjour Bayram !" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/last_login_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_regular"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:text="Dernière connexion: 30 mai à 11:15" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bo_access_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_be_access" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bo_access_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_semibold_regular"
        android:text="@string/bo_access"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bo_access_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_semibold_regular"
        android:gravity="center"
        android:textColor="@color/grey_2"
        android:textSize="15sp"
        tools:text="Génerer un code d\'accès à votre compte sur l\'application web" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/access_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded_primary"
        android:elevation="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_login" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/omnes_semibold_regular"
            android:text="@string/access"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</net.noliaware.yumi_agent.feature_auth.presentation.views.AuthView>